{
  "name": "vue-global-config",
  "version": "0.0.2",
  "private": false,
  "description": "Configure your Vue 2 & 3 Components globally",
  "author": "cloydlau",
  "license": "MIT",
  "keywords": [
    "global config",
    "global configuration",
    "global options",
    "vue",
    "component",
    "sfc"
  ],
  "exports": {
    ".": {
      "require": "./dist/vue-global-config.umd.js",
      "import": "./dist/vue-global-config.mjs"
    }
  },
  "main": "./dist/vue-global-config.umd.js",
  "module": "./dist/vue-global-config.mjs",
  "scripts": {
    "dev": "pnpm switch3 && vite --config ./demo/vue3/vite.config.ts --open",
    "dev2.7": "pnpm switch2.7 && vite --config ./demo/vue2.7/vite.config.ts --open",
    "dev2": "pnpm switch2 && vite --config ./demo/vue2/vite.config.ts --open",
    "switch3": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 3",
    "switch2.7": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 2.7",
    "switch2": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 2",
    "build": "vite build",
    "serve": "vite preview",
    "clean": "rd /s /q .\\node_modules",
    "ri": "npm run clean && pnpm i",
    "u": "node scripts/upgrade.js",
    "r": "node scripts/release.js",
    "rs": "node scripts/release.js --straightforward"
  },
  "peerDependencies": {
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "change-case": "latest",
    "kayran": "latest",
    "lodash-es": "latest",
    "vue-demi": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "chalk": "^4.1.2",
    "enquirer": "latest",
    "eslint": "latest",
    "execa": "^4.1.0",
    "husky": "latest",
    "lint-staged": "latest",
    "minimist": "latest",
    "semver": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vue-global-config": "latest",
    "@vitejs/plugin-vue2": "latest",
    "@vue/test-utils": "1",
    "element-ui": "latest",
    "vue": "^2.7"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}